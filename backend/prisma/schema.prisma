generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lists       List[]
  members     String[]
  owner       String
  admins      String[]
  labels      Label[]
}

model List {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  projectId   String
  items       Item[]

  Project Project[]
}

model Item {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  listId      String
  type        Type     @relation(fields: [typeid], references: [id])
  typeid      String
  label       Label[]
  priority    Int
  List        List     @relation(fields: [listId], references: [id])
}

model Type {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Item Item[]
}

model Label {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bgColor   String
  textColor String
  projectId   String
  Project     Project  @relation(fields: [projectId], references: [id])

  Item Item[]
}
